<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0b0b0b">

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prêt"
        android:textSize="20sp"
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <View
        android:id="@+id/track"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#121212"
        app:layout_constraintTop_toBottomOf="@id/status_text"
        app:layout_constraintBottom_toTopOf="@id/btn_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <ImageView
        android:id="@+id/car_player"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:src="@drawable/car_player"
        app:layout_constraintStart_toStartOf="@id/track"
        app:layout_constraintTop_toTopOf="@id/track"
        android:layout_marginTop="24dp" />

    <ImageView
        android:id="@+id/car_opponent"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:src="@drawable/car_opponent"
        app:layout_constraintStart_toStartOf="@id/track"
        app:layout_constraintTop_toBottomOf="@id/car_player"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Démarrer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
