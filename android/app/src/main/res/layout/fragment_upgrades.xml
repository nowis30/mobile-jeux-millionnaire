<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1a">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Section Moteur -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MOTEUR"
            android:textColor="#4CAF50"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#2a2a2a"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvEngineLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Niveau 1/20"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvEnginePower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="130 HP (Corolla)"
                    android:textColor="#03A9F4"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/btnUpgradeEngine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Améliorer - 1 000 000 $"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#ffffff"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section Transmission -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRANSMISSION"
            android:textColor="#FF5722"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#2a2a2a"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvTransmissionLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Niveau 1/5"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvTransmissionGears"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 vitesses Corolla (fixe)"
                    android:textColor="#03A9F4"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/btnUpgradeTransmission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Améliorer - 1 000 000 $"
                    android:backgroundTint="#FF5722"
                    android:textColor="#ffffff"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
